@model IEnumerable<Aanand_mvc_project.Models.Customer>;
@{
}
<a asp-action="Create" asp-controller="Customer" class="btn">Create</a>
<table class="table table">
    <thead>
        <tr class="col-6 offset-3">
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    @foreach (var cus in Model)
    {
<tr>
    <td>@cus.Id</td>
    <td>@cus.Name</td>
    <td>@cus.Email</td>
    <td>@cus.Address</td>
    <td>
        <a asp-action="Edit" asp-controller="Customer"
           asp-route-id="@cus.Id" class="btn" id="btn3">Edit</a>

        <a asp-action="Delete" asp-controller="Customer" 
           asp-route-id="@cus.Id" class="btn" id="btn4">Delete</a>
    </td>
 
</tr>

    }
</table>
